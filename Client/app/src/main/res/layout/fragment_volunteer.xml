<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/sen_bold"
                    android:text="Ask for Volunteers"
                    android:textColor="@color/textColor"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#FFFFFF"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/getVolunteerCard"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="24dp"
                            android:background="@drawable/card">

                            <TextView
                                android:id="@+id/txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sen_bold"
                                android:text="Get Volunteers"
                                android:textColor="#ffffff"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="@font/sen_bold"
                                android:layout_below="@id/txt1"
                                android:textSize="11sp"
                                android:layout_marginTop="4dp"
                                android:alpha="0.7"
                                android:text="Call for helping hands"
                                android:textColor="#ffffff"/>

                            <View
                                android:layout_toRightOf="@id/txt1"
                                android:layout_width="3dp"
                                android:layout_marginLeft="16dp"
                                android:layout_centerVertical="true"
                                android:layout_height="50dp"
                                android:background="#ffffff"/>
                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="20dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_path_771"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:fontFamily="@font/sen_bold"
                                android:text="Calls for help"
                                android:textColor="@color/textColor"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/total_help"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="32dp"
                                android:text="4"
                                android:textColor="@color/textColor"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_general"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="24dp"
                            android:paddingBottom="30dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="4"
                            tools:listitem="@layout/item_view" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>